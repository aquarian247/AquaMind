{
    // Python environment settings
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.venvPath": "${workspaceFolder}",
    "python.envFile": "${workspaceFolder}/.env",
    
    // Python environment creation settings
    "python.createEnvironment.contentButton": "show",
    "python.createEnvironment.trigger": "off",
    "python.createEnvironment.preferredEnvironmentType": "venv",
    "python.createEnvironment.venvOptions": {
        "venvPath": "${workspaceFolder}/.venv"
    },
    
    // Linting and formatting
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    
    // Django settings
    "files.associations": {
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    
    // File explorer settings
    "explorer.excludeGitIgnore": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/venv": true
    },
    
    // Terminal settings
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    
    // Search settings to exclude virtual environments
    "search.exclude": {
        "**/.venv": true,
        "**/venv": true,
        "**/__pycache__": true
    }
}
